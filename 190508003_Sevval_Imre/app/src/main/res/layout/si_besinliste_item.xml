<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/si_besinResmi_list"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/si_besinAdi_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin Adı"
            android:textColor="#F44336"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/si_porsiyon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porsiyon"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/si_ogun_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Öğün"
            android:textColor="#3F51B5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/si_icecek_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İçecek"
            android:textColor="#4CAF50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/si_cinsiyet_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cinsiyet"
            android:textColor="#E91E63"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>